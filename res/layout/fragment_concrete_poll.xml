<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="#ffffff">
	<LinearLayout
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="75dp"
			android:orientation="vertical"
			android:background="#82a4b3bb">
		<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:textSize="32sp"
				android:id="@+id/pollTitle"
				android:textAlignment="center"
				android:autoText="false"
				android:textColor="#ff000000"
				android:gravity="center"/>
		<LinearLayout android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:orientation="horizontal">
			<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_weight="1"
					android:textSize="20sp"
					android:text="Question "
					android:textAlignment="center"
					android:autoText="false"
					android:textColor="#ff000000"
					android:gravity="center"/>
			<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_weight="1"
					android:textSize="20sp"
					android:textAlignment="center"
					android:autoText="false"
					android:textColor="#ff000000"
					android:gravity="center" android:id="@+id/questionID"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#4c33354b">
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp">
		<TextView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textSize="28sp"
				android:gravity="center"
				android:textAlignment="center"
				android:autoText="false"
				android:layout_gravity="center"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textColor="#000000" android:id="@+id/questionText"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_margin="10dp">
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="1dp"
					android:layout_gravity="center_vertical">
				<LinearLayout
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:background="#ffe79070"
						android:layout_gravity="left">
					<TextView
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:textSize="25sp"
							android:text="1"
							android:textAlignment="center"
							android:autoText="false"
							android:textColor="#ffffff"
							android:gravity="center"
							android:background="@drawable/round_notif"/>
				</LinearLayout>
				<TextView
						android:layout_height="wrap_content"
						android:layout_width="0dp"
						android:layout_weight=".70"
						android:textSize="20sp"
						android:textAlignment="center"
						android:autoText="false"
						android:layout_marginLeft="5dp"
						android:textColor="#ff000000"
						android:layout_gravity="center_vertical"
						android:id="@+id/answerOne"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="1dp">
				<LinearLayout
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:background="#ffe792af"
						android:layout_gravity="left">
					<TextView
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:textSize="25sp"
							android:text="2"
							android:textAlignment="center"
							android:autoText="false"
							android:textColor="#ffffff"
							android:gravity="center"
							android:background="@drawable/round_notif"/>
				</LinearLayout>
				<TextView
						android:layout_height="wrap_content"
						android:layout_width="0dp"
						android:layout_weight=".70"
						android:textSize="20sp"
						android:textAlignment="center"
						android:autoText="false"
						android:layout_marginLeft="5dp"
						android:textColor="#ff000000"
						android:layout_gravity="center_vertical"
						android:id="@+id/answerTwo"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="1dp">
				<LinearLayout
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:background="#ff9ae796"
						android:layout_gravity="left">
					<TextView
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:textSize="25sp"
							android:text="3"
							android:textAlignment="center"
							android:autoText="false"
							android:textColor="#ffffff"
							android:gravity="center"
							android:background="@drawable/round_notif"/>
				</LinearLayout>
				<TextView
						android:layout_height="wrap_content"
						android:layout_width="0dp"
						android:layout_weight=".70"
						android:textSize="20sp"
						android:textAlignment="center"
						android:autoText="false"
						android:layout_marginLeft="5dp"
						android:textColor="#ff000000"
						android:layout_gravity="center_vertical"
						android:id="@+id/answerThree"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="1dp">
				<LinearLayout
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:background="#ffa3abe7"
						android:layout_gravity="left">
					<TextView
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:textSize="25sp"
							android:text="4"
							android:textAlignment="center"
							android:autoText="false"
							android:textColor="#ffffff"
							android:gravity="center"
							android:background="@drawable/round_notif"/>
				</LinearLayout>
				<TextView
						android:layout_height="wrap_content"
						android:layout_width="0dp"
						android:layout_weight=".70"
						android:textSize="20sp"
						android:textAlignment="center"
						android:autoText="false"
						android:layout_marginLeft="5dp"
						android:textColor="#ff000000"
						android:layout_gravity="center_vertical"
						android:id="@+id/answerFour"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>