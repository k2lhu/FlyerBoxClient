<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FF7253"
              android:tag="">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:id="@+id/polls_list_item"
            android:background="@drawable/poll_selector">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="35sp"
            android:text="Mc'Donalds"
            android:id="@+id/pollItemTitle"
            android:textAlignment="center"
            android:autoText="false"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_height="25sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Some description"
            android:id="@+id/pollItemDescription"
            android:textAlignment="center"
            android:autoText="false"
            android:layout_marginLeft="20dp"
            android:textColor="#74000000"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/poll_status_selector"
            android:visibility="visible"
            android:orientation="vertical"
            android:id="@+id/pollItemStatus"/>
    </LinearLayout>
</LinearLayout>